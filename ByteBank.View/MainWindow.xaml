<Window x:Class="ByteBank.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ByteBank FrontOffice" Height="600" Width="525"
        WindowStartupLocation="CenterScreen">
    <DockPanel Margin="10">
        <!-- Logotipo -->
        <Image Source="/ByteBank.View;component/Assets/Logo.png"
               Height="75"
               DockPanel.Dock="Top"/>

        <!-- Botão para Processamento -->
        <TextBlock Name="TxtTempo"
                   DockPanel.Dock="Bottom"
                   HorizontalAlignment="Right">
        </TextBlock>
		
		<Grid DockPanel.Dock="Bottom">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<!-- Botões. Valor padrão ao grid é o 1, com isso o primeiro botão não necessita do argumento explícito. -->
            <Button Name="BtnProcessar"
                    Padding="10"
                    Click="BtnProcessar_Click">
                Fazer Processamento de contas
            </Button>

			<Button Name="BtnCancelar"
                Padding="10"
                Grid.Column="2"
				IsEnabled="False"
                HorizontalAlignment="Right"
                Click="BtnCancelar_Click">
				Cancelar Processamento de contas
			</Button>
        
		</Grid>
		      
        <!-- Resultado -->
        <TextBlock DockPanel.Dock="Top">Resultado:</TextBlock>
        <TextBlock DockPanel.Dock="Top"
                   Name="TxtProgresso"/>

		<!-- Barra de Progresso de resposta ao usuário -->
		<ProgressBar Name="PgsProgresso"
                     Minimum="0"
                     Height="23"
                     DockPanel.Dock="Bottom"/>
		
        <ListView Name="LstResultados"
                  Background="Beige"
                  Margin="0 10">
        </ListView>
    </DockPanel>
</Window>
